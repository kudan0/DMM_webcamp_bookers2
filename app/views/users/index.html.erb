<p id="notice"></p>

<div class-"container px-5 px-sm-0">
  <div class="row">
<!--テンプレここから-->
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, class: "fallback" %>
      <table class="table">
        <tr></tr>
        <tr>
          <th>name</th>
          <th></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th></th>
        </tr>
      </table>
      <div class="row">
        <%= link_to "", "/users/[:id]/edit", class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "form-control", id: "book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "form-cotrol", id: "book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
<!--ここまで-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>


