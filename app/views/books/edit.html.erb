<p id="notice"></p>

<div class="container">
  <div class="row">
    <div ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field:title, autofocus: true, id:"book_title", class: "form-control book_title"%>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area:opinion, autofocus: true, id:"user_introduction", class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "update Book", class: "btn btn-secondary" %>
        </div>
        <%= link_to 'Show', book_path %>
        |
        <%= link_to 'Back', "/books" %>
      <% end %>
    </div>
  </div>
</div>